{
  "name": "zesje",
  "main": "index.js",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "concurrently --kill-others --names \"WEBPACK,MYSQL,PYTHON,CELERY,REDIS\" --prefix-colors \"bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgRed.bold,bgYellow.bold\" \"yarn dev:webpack\" \"yarn dev:mysql start -i --allow-running\" \"yarn start\" \"yarn dev:celery\" \"yarn dev:redis\"",
    "dev:backend": "concurrently --kill-others --names \"MYSQL,PYTHON,CELERY,REDIS\" --prefix-colors \"bgMagenta.bold,bgGreen.bold,bgRed.bold,bgYellow.bold\" \"yarn dev:mysql start -i --allow-running\" \"yarn start\" \"yarn dev:celery\" \"yarn dev:redis\"",
    "dev:webpack": "webpack serve --hot --progress --config webpack.dev.js",
    "dev:celery": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py celery -A zesje.wsgi.celery worker -l info --autoscale=4,1 --max-tasks-per-child=16",
    "dev:redis": "redis-server redis.conf",
    "dev:oauth": "python $(pwd)/mock_oauth_server.py",
    "build": "webpack --config webpack.prod.js",
    "ci": "yarn lint; yarn test",
    "lint": "yarn lint:js; yarn lint:py",
    "test": "yarn test:js; yarn test:py",
    "lint:js": "eslint . --ext jsx --fix | snazzy",
    "test:js": "jest",
    "lint:py": "flake8",
    "command:test:py": "ZESJE_SETTINGS=$(pwd)/zesje_test_cfg.py python3 -m pytest -v -W error::RuntimeWarning",
    "test:py": "wrap () { yarn dev:mysql is-running && (yarn command:test:py \"$*\" || true) || ((yarn dev:mysql start && yarn command:test:py \"$*\"); yarn dev:mysql stop)}; wrap",
    "start": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py python3 zesje",
    "analyze": "webpack --config webpack.prod.js --profile --json > stats.json; webpack-bundle-analyzer stats.json zesje/static",
    "migrate": "FLASK_APP=zesje.wsgi:app flask db upgrade",
    "dev:migrate": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py FLASK_APP=zesje.wsgi:app flask db upgrade",
    "command:dev:prepare-migration": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py FLASK_APP=zesje.wsgi:app flask db migrate",
    "dev:prepare-migration": "yarn dev:mysql is-running && (yarn command:dev:prepare-migration || true) || ((yarn dev:mysql start && sleep 2 && yarn command:dev:prepare-migration); yarn dev:mysql stop)",
    "test:py:cov": "yarn command:test:py --junitxml=tests.xml --cov=zesje --cov-report=xml:cov.xml --cov-report=html:cov.html --cov-report=term tests/",
    "dev:test:py:cov": "yarn dev:mysql start && yarn test:py:cov && yarn dev:mysql stop",
    "migrate-down": "FLASK_APP=zesje.wsgi:app flask db downgrade",
    "dev:mysql": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py python3 -m zesje.mysql",
    "dev:mysql-init": "yarn dev:mysql create && sleep 2 && yarn dev:mysql-migrate",
    "dev:mysql-migrate": "yarn dev:mysql is-running && (yarn dev:migrate || true) || ((yarn dev:mysql start && sleep 2 && yarn dev:migrate); yarn dev:mysql stop)"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "standard",
      "standard-react",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "__ZESJE_VERSION__": false,
      "alert": false,
      "confirm": false
    },
    "plugins": [
      "react",
      "import",
      "promise",
      "node"
    ],
    "rules": {
      "react/jsx-handler-names": "off",
      "react/prop-types": "off",
      "react/no-did-update-set-state": "warn",
      "no-bitwise": "error",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  },
  "dependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@loadable/component": "5.15.3",
    "buffer": "^6.0.3",
    "bulma": "^0.9.4",
    "bulma-popover": "^1.1.1",
    "bulma-switch-control": "^1.2.2",
    "bulma-toast": "^2.4.2",
    "concurrently": "^6.5.1",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "fuse.js": "^6.6.2",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "humanize-duration": "^3.28.0",
    "image-size": "^1.0.2",
    "immutability-helper": "^3.1.1",
    "javascript-time-ago": "^2.5.9",
    "markdown-loader": "^8.0.0",
    "mathjs": "^11.8.0",
    "mini-css-extract-plugin": "^2.7.5",
    "mousetrap": "^1.6.5",
    "npm-check-updates": "^16.10.7",
    "object-hash": "^3.0.0",
    "path": "^0.12.7",
    "plotly.js-cartesian-dist-min": "^2.20.0",
    "react": "^17.0.2",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.7.1",
    "react-hot-loader": "^4.13.1",
    "react-page-visibility": "^6.4.0",
    "react-pdf": "^5.7.2",
    "react-plotly.js": "^2.6.0",
    "react-rnd": "^10.4.1",
    "react-router-dom": "^6.10.0",
    "react-table": "^7.8.0",
    "react-time-ago": "^7.2.1",
    "sass": "^1.61.0",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "webpack": "^5.78.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-flow": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@hot-loader/react-dom": "^17.0.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^9.1.2",
    "enzyme": "^3.11.0",
    "eslint": "^8.37.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^12.3.0",
    "react-test-renderer": "^17.0.2",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-dev-server": "^4.13.2"
  }
}
