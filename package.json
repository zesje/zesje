{
  "name": "zesje",
  "main": "index.js",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "concurrently --kill-others --names \"WEBPACK,MYSQL,PYTHON,CELERY,REDIS\" --prefix-colors \"bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgRed.bold,bgYellow.bold\" \"yarn dev:webpack\" \"yarn dev:mysql start -i --allow-running\" \"yarn start\" \"yarn dev:celery\" \"yarn dev:redis\"",
    "dev:backend": "concurrently --kill-others --names \"MYSQL,PYTHON,CELERY,REDIS\" --prefix-colors \"bgMagenta.bold,bgGreen.bold,bgRed.bold,bgYellow.bold\" \"yarn dev:mysql start -i --allow-running\" \"yarn start\" \"yarn dev:celery\" \"yarn dev:redis\"",
    "dev:webpack": "webpack serve --hot --inline --progress --config webpack.dev.js",
    "dev:celery": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py celery -A zesje.wsgi.celery worker -l info --autoscale=4,1 --max-tasks-per-child=16",
    "dev:redis": "redis-server redis.conf",
    "dev:oauth": "python $(pwd)/mock_oauth_server.py",
    "build": "webpack --config webpack.prod.js",
    "ci": "yarn lint; yarn test",
    "lint": "yarn lint:js; yarn lint:py",
    "test": "yarn test:js; yarn test:py",
    "lint:js": "standard --verbose | snazzy",
    "test:js": "jest",
    "lint:py": "flake8",
    "command:test:py": "ZESJE_SETTINGS=$(pwd)/zesje_test_cfg.py python3 -m pytest -v -W error::RuntimeWarning",
    "test:py": "yarn dev:mysql is-running && (yarn command:test:py || true) || ((yarn dev:mysql start && yarn command:test:py); yarn dev:mysql stop)",
    "start": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py python3 zesje",
    "analyze": "webpack --config webpack.prod.js --profile --json > stats.json; webpack-bundle-analyzer stats.json zesje/static",
    "migrate": "FLASK_APP=zesje.wsgi:app flask db upgrade",
    "dev:migrate": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py FLASK_APP=zesje.wsgi:app flask db upgrade",
    "command:dev:prepare-migration": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py FLASK_APP=zesje.wsgi:app flask db migrate",
    "dev:prepare-migration": "yarn dev:mysql is-running && (yarn command:dev:prepare-migration || true) || ((yarn dev:mysql start && sleep 2 && yarn command:dev:prepare-migration); yarn dev:mysql stop)",
    "test:py:cov": "yarn command:test:py --junitxml=tests.xml --cov=zesje --cov-report=xml:cov.xml --cov-report=html:cov.html --cov-report=term tests/",
    "dev:test:py:cov": "yarn dev:mysql start && yarn test:py:cov && yarn dev:mysql stop",
    "migrate-down": "FLASK_APP=zesje.wsgi:app flask db downgrade",
    "dev:mysql": "ZESJE_SETTINGS=$(pwd)/zesje_dev_cfg.py python3 -m zesje.mysql",
    "dev:mysql-init": "yarn dev:mysql create && sleep 2 && yarn dev:mysql-migrate",
    "dev:mysql-migrate": "yarn dev:mysql is-running && (yarn dev:migrate || true) || ((yarn dev:mysql start && sleep 2 && yarn dev:migrate); yarn dev:mysql stop)"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "globals": [
      "__ZESJE_VERSION__",
      "alert",
      "confirm"
    ]
  },
  "dependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "bulma": "^0.9.2",
    "bulma-popover": "^1.0.3",
    "bulma-switch-control": "^1.1.1",
    "bulma-toast": "^2.3.1",
    "concurrently": "^6.2.0",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "font-awesome": "^4.7.0",
    "fuse.js": "^6.4.6",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "humanize-duration": "^3.27.0",
    "image-dimensions-loader": "^0.1.0",
    "immutability-helper": "^3.1.1",
    "markdown-loader": "^6.0.0",
    "mathjs": "^9.4.2",
    "mini-css-extract-plugin": "^1.6.0",
    "mousetrap": "^1.6.5",
    "object-hash": "^2.0.0",
    "path": "^0.12.7",
    "plotly.js-cartesian-dist": "^2.0.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.3.2",
    "react-hot-loader": "^4.13.0",
    "react-loadable": "^5.5.0",
    "react-pdf": "^5.0.3",
    "react-plotly.js": "^2.5.1",
    "react-rnd": "^10.3.3",
    "react-router-dom": "^5.2.0",
    "react-table": "^7.7.0",
    "sass": "^1.32.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@hot-loader/react-dom": "^17.0.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "enzyme": "^3.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.4",
    "jest-junit": "^12.2.0",
    "react-test-renderer": "^17.0.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-dev-server": "^3.11.2"
  }
}
